extends layout

block header
  script(type = 'text/javascript').
    var csrf=!{JSON.stringify(csrf)};

block content
  .container
    div.header
      ul.nav.nav-pills.pull-right
        li
          a(href="/") Home
        li.active
          a(href="#") Sign In 
      h3.text-muted CryptoBook

    div.row
      div.col-lg-6
        //- form#loginForm.page-form(name="loginuser", role="form", method="post", action="/login/")
        form(action="/login", method="post")#loginForm
          .form-group
            label(for="exampleUserName") User Name
            input#loginName.form-control(name="username", placeholder="Enter Username")
          .form-group
            label(for="examplePassword") Password
            input#loginPass.form-control(name="password", type="password", placeholder="Enter Password")
          //- fix this: put in ajax?
          input(type="hidden" name="_csrf" value="#{csrf}")
          button(type="submit")#loginButton.btn Log In
      div.col-lg-6
        //- form#registerform.page-form(name="adduser", role="form", method="post", action="/login/new")
        form(action="/signup", method="post")#registerform
          .form-group
            label(for="exampleUserName", method="post") User Name
            input#usernameInput.form-control(name="username", placeholder="Enter Username")
          .form-group
            label(for="examplePassword") Password
            input.form-control(name="password", type="password", placeholder="Enter Password")
          .form-group
            label(for="exampleConfirmPassword") Confirm Password
            input#passInput.form-control(name="confirmpassword", type="password", placeholder="Enter Password")
          //- fix this: put in ajax?
          input(type="hidden" name="_csrf" value="#{csrf}")
          button(type="submit")#signupButton.btn Add User!
    div.footer
      p CryptoBook, April 2015
