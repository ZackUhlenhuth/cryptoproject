 <div id="post-full-{{_id}}" class="post-full">
    <h1>{{title}}</h1>
    <p id="plaintext">{{plaintext}}</p>
    <div>
        {{#each tags}}
            {{> tag}}
        {{/each}}
    </div>
    <p class="subtext">Posted {{formatDate date}} by {{author.username}}</p>
    <button class="btn btn-danger">DELETE</button>
 </div>