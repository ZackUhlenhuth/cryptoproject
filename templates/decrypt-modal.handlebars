<div id="decrypt-modal" tabindex="-1" role="dialog" aria-labelledby="decryptModalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button", data-dismiss="modal", aria-hidden="true">&times;</button>
                <h4 id="decryptModalLabel" class="modal-title">Decrypt post</h4>
            </div>
            <div class="modal-body">
                <div id="decrypt-modal-error"></div>
                <form id='decrypt-form' class="form-horizontal" role="form" data-post-id="{{_id}}">
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="password">Password</label>
                        <div class="col-lg-10">
                            <input class="form-control" type='password' name='password' required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="hint">Hint</label>
                        <div class="col-lg-10">
                            <input class="form-control" type='text' name='hint'/>{{hint}}
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Close</button>
                <button id="decrypt-post-submit" type="button" class="btn">Decrypt</button>
            </div>
        </div>
    </div>
</div>